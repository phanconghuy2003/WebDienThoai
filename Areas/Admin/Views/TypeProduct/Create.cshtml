@model bandienthoai.Areas.Admin.Models.EF.LOAISANPHAM

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section jsFooter{
   <script>
    $(document).ready(function() {
        $("#btn-add").click(function () {
            $("#btnsubmit").click();
         });
    });
    </script>
}
@section Header{
    <h2 class="no-margin-bottom">Sản Phẩm</h2>
    <div class="page-button ml-auto">
        <a href="/Admin/Product/Index"><button id="btn-back" type="button" class="btn btn-default"><i class="fas fa-arrow-left"></i> Trở Về</button></a>
        <a href="# "><button id="btn-add" type="submit" class="btn btn-default "><i class="fas fa-save"></i> Lưu</a></button></a>

    </div>

}

@using (Html.BeginForm("Create", "TypeProduct", FormMethod.Post, new { id = "frmCreate", name = "frmCreate", @class = "needs-validation" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="container">
            <div class="row group">

                <div class="col-md-6">
                    @Html.LabelFor(model => model.TEN_LOAISANPHAM, htmlAttributes: new { @class = "control-label " })
                    @Html.TextBoxFor(model => model.TEN_LOAISANPHAM, new { htmlAttributes = new { @class = "form-control" }, required = true, @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.TEN_LOAISANPHAM, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">
                    <label>Thuộc danh mục</label>
                    @Html.DropDownList("PARENTID", (IEnumerable<SelectListItem>)ViewBag.LOAISANPHAM_ID, "--select--", new { @class = "form-control" })
                    @*@Html.DropDownListFor(model => model.LOAISANPHAM_ID, "--select--", new { htmlAttributes = new { @class = "form-control select" }, @class = "custom-select" })*@
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" id="btnsubmit" value="Create" style="display:none" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}


